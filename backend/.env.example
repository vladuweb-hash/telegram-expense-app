# ==================== SERVER ====================
PORT=3000
NODE_ENV=development

# URL приложения (для webhook)
APP_URL=https://your-app.com

# ==================== DATABASE ====================
DATABASE_URL=postgresql://postgres:password@localhost:5432/telegram_mini_app

# ==================== TELEGRAM ====================
# Токен бота от @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Секрет для верификации webhook (опционально)
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# ==================== SECURITY ====================
CORS_ORIGIN=http://localhost:5173

# API ключ для доступа к аналитике (обязателен в production)
ANALYTICS_API_KEY=your_secure_analytics_key

# ==================== RATE LIMITING ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================== REMINDERS ====================
# Таймзона для напоминаний
REMINDER_TIMEZONE=Europe/Moscow
